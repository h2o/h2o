#!/bin/sh

while [ $# -gt 0 ]; do
  case $1 in
    --cflags) echo -g -std=gnu99 -O3 -Wall -Werror-implicit-function-declaration -Wdeclaration-after-statement -Wwrite-strings -I"/Users/travisgalloway/github/h2o/deps/mruby/include";;
    --ldflags) echo -L/Users/travisgalloway/github/h2o/mruby/host/lib;;
    --ldflags-before-libs) ;;
    --libs) echo -lmruby -lm -lpthread -lreadline -lncurses;;
    --libmruby-path) echo /Users/travisgalloway/github/h2o/mruby/host/lib/libmruby.a;;
    --help) echo "Usage: mruby-config [switches]"
            echo "  switches:"
            echo "  --cflags                    print flags passed to compiler"
            echo "  --ldflags                   print flags passed to linker"
            echo "  --ldflags-before-libs       print flags passed to linker before linked libraries"
            echo "  --libs                      print linked libraries"
            echo "  --libmruby-path             print libmruby path"
            exit 0;;
  esac
  shift
done
